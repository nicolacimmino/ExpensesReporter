<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nicolacimmino.expensesreporter.app.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100.0sp"
        android:id="@+id/selectorAccountSource"
        >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/radioGroupSource" >

        <ToggleButton
            android:text="Cash"
            android:textOff="Cash"
            android:textOn="Cash"
            android:tag="cash"
            android:layout_width="80.0sp"
            android:layout_height="40.0sp"
            android:id="@+id/buttonSourceCash"
            android:onClick="onToggleSource"
            />
        <ToggleButton
            android:textOff="Visa"
            android:textOn="Visa"
            android:tag="visa"
            android:layout_width="80.0sp"
            android:layout_height="40.0sp"
            android:id="@+id/buttonSourceVisa"
            android:onClick="onToggleSource"
            android:layout_toRightOf="@+id/buttonSourceCash"
            />
        <ToggleButton
            android:textOff="Debit"
            android:textOn="Debit"
            android:tag="debit"
            android:layout_width="80.0sp"
            android:layout_height="40.0sp"
            android:id="@+id/buttonSourceDebit"
            android:onClick="onToggleSource"
            android:layout_toRightOf="@+id/buttonSourceVisa"
            />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100.0sp"
        android:id="@+id/selectorAccountDestination"
        android:layout_below="@+id/selectorAccountSource"
        >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/radioGroupDestination" >

        <ToggleButton
            android:textOff="Food"
            android:textOn="Food"
            android:tag="food"
            android:layout_width="80.0sp"
            android:layout_height="40.0sp"
            android:id="@+id/buttonDestinationFood"
            android:onClick="onToggleDestination"
            />
        <ToggleButton
            android:textOff="Home"
            android:textOn="Home"
            android:tag="home"
            android:layout_width="80.0sp"
            android:layout_height="40.0sp"
            android:id="@+id/buttonDestinationHome"
            android:layout_toRightOf="@+id/buttonDestinationFood"
            android:onClick="onToggleDestination"
            />
        <ToggleButton
            android:textOff="Other"
            android:textOn="Other"
            android:tag="other"
            android:layout_width="80.0sp"
            android:layout_height="40.0sp"
            android:id="@+id/buttonDestinationOther"
            android:layout_toRightOf="@+id/buttonDestinationHome"
            android:onClick="onToggleDestination"
            />
        </RadioGroup>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="15.0sp"
        android:id="@+id/textAmount"
        android:layout_below="@+id/selectorAccountDestination"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textAmount"
        android:layout_centerHorizontal="@+id/textAmount"
        >

        <Button
            android:text="1"
            android:tag="1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button1"
            android:onClick="onKeypadClick"
            />
        <Button
            android:text="2"
            android:tag="2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/button1"
            android:id="@+id/button2"
            android:onClick="onKeypadClick"
            />
        <Button
            android:text="3"
            android:tag="3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/button2"
            android:id="@+id/button3"
            android:onClick="onKeypadClick"
            />
        <Button
            android:text="4"
            android:tag="4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button1"
            android:id="@+id/button4"
            android:onClick="onKeypadClick"
            />
        <Button
            android:text="5"
            android:tag="5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button2"
            android:layout_toRightOf="@+id/button4"
            android:id="@+id/button5"
            android:onClick="onKeypadClick"
            />
        <Button
            android:text="6"
            android:tag="6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button3"
            android:layout_toRightOf="@+id/button5"
            android:id="@+id/button6"
            android:onClick="onKeypadClick"
            />
        <Button
            android:text="7"
            android:tag="7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button4"
            android:id="@+id/button7"
            android:onClick="onKeypadClick"
            />
        <Button
            android:text="8"
            android:tag="8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button5"
            android:layout_toRightOf="@+id/button7"
            android:id="@+id/button8"
            android:onClick="onKeypadClick"
            />
        <Button
            android:text="9"
            android:tag="9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button6"
            android:layout_toRightOf="@+id/button8"
            android:id="@+id/button9"
            android:onClick="onKeypadClick"
            />
        <Button
            android:text="."
            android:tag="."
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button7"
            android:id="@+id/buttonDecimal"
            android:onClick="onKeypadClick"
            />

        <Button
            android:text="0"
            android:tag="0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button8"
            android:layout_toRightOf="@+id/button7"
            android:id="@+id/button0"
            android:onClick="onKeypadClick"
            />

        <Button
            android:text="D"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/button9"
            android:layout_toRightOf="@+id/button0"
            android:id="@+id/buttonDel"
            android:onClick="onKeypadDelClick"
            />

    </RelativeLayout>

</RelativeLayout>
